<Page x:Class="teamproject_2024.DbAddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:teamproject_2024"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DbAddPage">

    <Grid RenderTransformOrigin="0.503,0.538" Background ="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.5*" />
            <ColumnDefinition Width="0.4*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0">
            <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="0.5" Margin="5,3,5,3" Grid.Column="0">
                <Canvas Grid.Column="0">

                    <Button x:Name="BtnRun" Content="실행" HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" Height="30" Canvas.Left="129" Canvas.Top="10" Grid.Column="0" Click="BtnRun_Click"/>
                    <Button x:Name="BtnPause" Content="일시정지" HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" Height="30" Canvas.Left="234" Canvas.Top="10" Click="BtnPause_Click"/>
                    <Button x:Name="BtnSave" Content="저장" HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" Height="30" Canvas.Left="338" Canvas.Top="10"/>
                    <Button x:Name="BtnClose" Content="종료" HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" Height="30" Canvas.Left="442" Canvas.Top="10" RenderTransformOrigin="0.514,0.501"/>
                    <Button x:Name="BtnConnect" Content="연결" Width="80" Height="30" Canvas.Left="24" Canvas.Top="10"  HorizontalAlignment="Left" VerticalAlignment="Center" Click="BtnConnect_Click"/>

                </Canvas>
            </Border>

        </Grid>

        <DataGrid Grid.Row="2" Grid.Column="0" x:Name="GrdResults" Margin="5,5,5,5" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Width="1*" Binding="{Binding Division}" Header="분 류" />
                <DataGridTextColumn Width="1*" Binding="{Binding Product}" Header="제 품 명" />
                <DataGridTextColumn Width="1*" Binding="{Binding Date}" Header="등록일자" />
            </DataGrid.Columns>
        </DataGrid>

        <Label Grid.Column="1" HorizontalAlignment="Center" Background="DarkGray" Margin="0,3,0,3" Width="80" Grid.RowSpan="2" RenderTransformOrigin="0.692,0.529"/>

        <Label HorizontalAlignment="Center" Margin="0,19,0,14" Background="DarkGray" Grid.Column="1">
            <Label.Content>
                <TextBlock Text="분류" HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="Bold"/>
            </Label.Content>
        </Label>

        <Label HorizontalAlignment="Center" Margin="0,20,0,343" Background="DarkGray" Grid.Column="1" Grid.Row="1">
            <Label.Content>
                <TextBlock Text="제품명" HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="Bold"/>
            </Label.Content>
        </Label>

        <Label HorizontalAlignment="Center" Margin="0,84,0,279" Background="DarkGray" Grid.Column="1" Grid.Row="1">
            <Label.Content>
                <TextBlock Text="등록일자" HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="Bold"/>
            </Label.Content>
        </Label>

        <ComboBox Grid.Column="2" HorizontalAlignment="Center" Margin="0,19,0,0" VerticalAlignment="Top" Width="120" Height="26"/>
        <TextBox Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Height="26"/>
        <DatePicker Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" Margin="0,84,0,0" VerticalAlignment="Top" Width="120"/>

        <Button Content="수정" Grid.Row="1" Grid.Column="2" Height="30" Width="80" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" />


    </Grid>
</Page>
