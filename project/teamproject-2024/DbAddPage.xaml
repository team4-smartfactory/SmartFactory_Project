<Page x:Class="teamproject_2024.DbAddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:teamproject_2024"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DbAddPage">

    <Grid RenderTransformOrigin="0.503,0.538" Background ="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0">
            <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="0.5" Margin="5,3,5,3" Grid.Column="0">
                <Canvas Grid.Column="0">

                    <Button x:Name="BtnRun" Content="실행" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="30" Canvas.Left="182" Canvas.Top="11" Grid.Column="0" Click="BtnRun_Click"/>
                    <Button x:Name="BtnPause" Content="일시정지" HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" Height="30" Canvas.Left="274" Canvas.Top="11" Click="BtnPause_Click"/>
                    <Button x:Name="BtnSave" Content="저장" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="30" Canvas.Left="374" Canvas.Top="12"/>
                    <Button x:Name="BtnClose" Content="종료" HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" Height="30" Canvas.Left="459" Canvas.Top="11" RenderTransformOrigin="0.514,0.501"/>
                    <Button x:Name="BtnConnect" Content="연결" Width="80" Height="30" Canvas.Left="90" Canvas.Top="10"  HorizontalAlignment="Center" VerticalAlignment="Top" Click="BtnConnect_Click"/>

                </Canvas>
            </Border>

        </Grid>

        <DataGrid Grid.Row="2" Grid.Column="0" x:Name="GrdResults" Margin="5,5,5,5" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Width="1*" Binding="{Binding Division}" Header="분 류" />
                <DataGridTextColumn Width="1*" Binding="{Binding Product}" Header="제 품 명" />
                <DataGridTextColumn Width="1*" Binding="{Binding Date}" Header="등록일자" />
            </DataGrid.Columns>
        </DataGrid>

        <Label Grid.Column="1" HorizontalAlignment="Center" Background="LightGray" Width="80" Grid.RowSpan="2"/>

        <Label Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Margin="0,40,5,0" Background="LightGray">
            <Label.Content>
                <TextBlock Text="분류" HorizontalAlignment="Right" VerticalAlignment="Center" />
            </Label.Content>
        </Label>

        <Label Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Margin="0,75,5,0" Background="LightGray">
            <Label.Content>
                <TextBlock Text="제품명" HorizontalAlignment="Right" VerticalAlignment="Center" />
            </Label.Content>
        </Label>

        <Label Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Margin="1,112,0,0" Background="LightGray">
            <Label.Content>
                <TextBlock Text="등록일자" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Label.Content>
        </Label>

        <ComboBox Grid.Column="2" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Width="120" Height="26" Grid.RowSpan="2"/>
        <TextBox Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" Margin="0,40,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Height="26"/>
        <DatePicker Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" Margin="0,85,0,0" VerticalAlignment="Top" Width="120"/>

        <Button Content="수정" Grid.Row="1" Grid.Column="2" Height="30" Width="70" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" />


    </Grid>
</Page>
